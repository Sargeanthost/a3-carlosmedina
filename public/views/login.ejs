<!doctype html>
<html lang="en" data-bs-theme="dark">

<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="js/main.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
    <link rel="preload" href="https://fonts.gstatic.com/s/roboto/v30/KFOmCnqEu92Fr1Mu4mxK.woff2" as="font" crossorigin>
    <style>
        @font-face {
            font-family: 'Roboto';
            font-style: normal;
            font-weight: 400;
            src: local('Roboto Regular'), url(https://fonts.gstatic.com/s/roboto/v30/KFOmCnqEu92Fr1Mu4mxK.woff2) format('woff2');
            unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
        }
    </style>
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/main.css">

    <!-- get rid of favicon error -->
    <link rel="icon" href="data:;base64,iVBORw0KGgo=">
</head>

<body>
    <div class="container">
        <div class="row justify-content-center align-items-center g-2">
            <div class="col">
                <div class="col text-center mt-5 mb-5" id="login-title-bar">
                    <h1>Login</h1>
                </div>
            </div>
        </div>
        <% if (messages.error){ %>
            <div class="row justify-content-center align-items-center g-2">
                <div class="col">
                    <div class="col text-center mb-5">
                        <p class="h2" id="login-error-message">
                            <%= messages.error %>
                                <p>

                    </div>
                </div>
            </div>
            <% }%>
        <div class="row justify-content-center align-items-center g-2">
            <div class="col">
                <form class="rounded border border-light-subtle p-2" action="/login" method="POST">
                    <div class="mb-3">
                        <label for="username" class="form-label">Enter username</label>
                        <input type="text" class="form-control" name="username" id="username"
                            placeholder="Enter your username" required />
                        <small class="form-text text-muted">Click <a href="/register">here</a> to
                            register a new user</small>
                    </div>
                    <div class="mb-2">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" name="password" id="password"
                            placeholder="Enter your password" required />

                    </div>
                    <div class="form-check form-check-inline mb-3">
                        <input class="form-check-input" type="checkbox" id="show-password"
                            onclick="togglePassword()" />
                        <label class="form-check-label" for="show-password">Show password</label>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">
                            Submit
                        </button>
                    </div>
                    <script>function togglePassword() {
                            var x = document.getElementById("password");
                            if (x.type === "password") {
                                x.type = "text";
                            } else {
                                x.type = "password";
                            }
                        }</script>
                </form>
            </div>
        </div>
    </div>
</body>

</html>